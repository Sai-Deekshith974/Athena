/**index.wxss**/
.strip{
  position: absolute;
  top:0%;
  width: 100%;
  height: 3rem;
  background-color: lightblue;
}
.image_normal{
  width:1rem;
  height: 1rem;
  position: absolute;
  right:70%;
  top: 30%;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
}
.screen_show{
  width:30%;
  height: 100%;
  background-color: #eee;
  text-align: center;
}
.screen_title{
   width:100%;
  height: 100%;
  background-color: lightblue;
  margin-top: 10%;
}
.select_titles{
  margin-top:0;
   z-index: 100;
  position: absolute;
}
.select_onetitle{
  text-align: center;
  background-color:lightblue;
  width:230rpx;  
  height:100rpx;
  line-height:100rpx;
  margin:0;
  border-bottom:2rpx solid rgb(255, 255, 255);
}
.image_normalno{
  width:1rem;
  height: 1rem;
  position: absolute;
  right:70%;
  top: 30%;
  transition: All 0.4s ease; 
  -webkit-transition: All 0.4s ease;
  transform: rotate(180deg);
}
.search{
  position: absolute;
  top:30%;
  width: 50%;
  left:30%;
 
}
.search:hover{
 border-bottom:solid 1px #eee  ;
}
.search_book{
 text-align: center;
}
.icon_button{
  width:2rem;
  height:2rem;
   z-index: 100;
  position: absolute;
  right:10%;
  top: 20%;
}
.imagetag{
  width: 3rem;
  height:3rem;
}
.texttag{
  text-align: center;
}
.tagitem{
  background-color: lightblue;
    width:40%;
    display: inline-flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 18px;
    position: relative;
    border: 1rem solid #fff;
}
.search_tag{
